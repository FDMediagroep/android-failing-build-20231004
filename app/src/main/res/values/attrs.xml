<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TriangleView">
        <attr name="tr_direction" format="enum">
            <enum name="left" value="0" />
            <enum name="up" value="1" />
            <enum name="right" value="2" />
            <enum name="down" value="3" />
        </attr>
        <attr name="tr_color" format="color" />
    </declare-styleable>

    <declare-styleable name="StockTickerView">
        <attr name="stock_trading" format="boolean"/>
        <attr name="stock_dropping" format="boolean"/>
        <attr name="stock_rising" format="boolean"/>
        <attr name="stock_value" format="float"/>
        <attr name="stock_delta" format="float"/>
    </declare-styleable>

</resources>